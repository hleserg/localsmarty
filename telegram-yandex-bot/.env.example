# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token

# Yandex Cloud Configuration
YC_FOLDER_ID=your_yandex_cloud_folder_id
# Prefer automatic IAM via Service Account key (one of):
# YC_SA_KEY_FILE=/path/to/authorized_key.json
# or put JSON directly (escape newlines properly):
# YC_SA_KEY_JSON={"id":"...","service_account_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"}

# Optional fallbacks:
# YC_IAM_TOKEN=your_yandex_iam_token
# YC_API_KEY=your_yandex_api_key

# Model Configuration
YC_MODEL_URI=gpt://your_folder_id/yandexgpt/latest
YC_TEMPERATURE=0.3
YC_MAX_TOKENS=800

# Bot Configuration
ENABLE_CONTEXT=true
LOG_LEVEL=INFO

# Voice Mode Configuration (optional)
ENABLE_VOICE=false
STT_LANGUAGE=ru-RU
TTS_VOICE=alena
TTS_FORMAT=oggopus
AUDIO_MAX_DURATION_SEC=60
ENABLE_TTS_REPLY=false